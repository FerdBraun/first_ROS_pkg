<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="INSECTOIDv1">
    <!--Phys macro-->
	<xacro:macro name="inertial_box" params="mass x y z *origin">
		<inertial>
			<xacro:insert_block name="origin"/>
			<mass value="${mass}" />
			<inertia ixx="${(1/12) * mass * (y*y+z*z)}" ixy="0.0" ixz="0.0"
                    iyy="${(1/12) * mass * (x*x+z*z)}" iyz="0.0"
                    izz="${(1/12) * mass * (x*x+y*y)}" />
		</inertial>
	</xacro:macro>
    


<!--Models-->
    <xacro:property name="base_path" value="$(find my_gazebo)/meshes/base.dae" />
    <xacro:property name="arm_path" value="$(find my_gazebo)/meshes/leg-section.dae" />
    <!--
	<link name="world"></link> 
    -->
    <!--BODY
	<joint name="base" type="fixed">
		<origin xyz="0 0 0.3 " />
		<parent link="world" />
		<child link="base_link" />
	</joint>
    -->
	<link name="base_link">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="${base_path}"/>
			</geometry>
			<material name="green">
				<color rgba="0.2 1 0.2 1"/>
			</material>
		</visual>
		<collision>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="0.2 0.45 0.06" />
			</geometry>
		</collision>
		<xacro:inertial_box mass="0.1" x="0.2" y="0.45" z="0.06">
            <origin xyz="0.0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
	</link>
    <!---->
    <!--CAMERA-->
    <joint name="camera_joint" type="fixed">
        <origin xyz="0 0.2 0.1" rpy="0 0 ${pi/2}"/>
        <parent link="base_link"/>
        <child link="camera_link"/>        
    </joint>
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <!-- camera_link describes the camera at the end of the arm -->
    <!-- - It has multiple visual elements, which ultimately get combined together -->
    <!-- - Even if we specify different materials, RViz will just colour them all the same as the first -->
    <!-- - Although we could also specify multiple collision geometries, instead we just use a single box that encompasses the whole camera -->
    <link name="camera_link">
        <visual>
            <origin xyz="-0.03 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.06 0.15 0.15" />
            </geometry>
            <material name="white" />
        </visual>
        <visual>
            <origin xyz="0.03 0 0" rpy="0 ${pi/2} 0"/>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.12 0.15 0.15" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.1" x="0.12" y="0.15" z="0.15">
            <origin xyz="0.0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!---->
    <material name="orange">
		<color rgba="1 0.3 0.1 1"/>
	</material>
    <!--LEG MACROS-->
    <xacro:macro name="leg_section_joint" params="joint_name joint_axis joint_xyz joint_parent joint_child ">
		<joint name="${joint_name}" type="revolute">
		    <origin xyz="${joint_xyz}" />
		    <parent link="${joint_parent}" />
		    <child link="${joint_child}" />
		    <axis xyz="${joint_axis}"/>
		    <limit lower="${-(pi/4)}" upper="${pi/4}" velocity="100" effort="100"/>
            <dynamics damping="1.2" friction="1.2"/>
	    </joint>

    </xacro:macro>
    <xacro:macro name="leg_section_link" params="link_name link_xyz link_rpy">
        <link name="${link_name}">
		    <visual>
			    <origin xyz="${link_xyz}" rpy="${link_rpy}"/>
			    <geometry>
			    	<mesh filename="${arm_path}"/>
			    </geometry>
			    <material name="orange" />
		    </visual>
		    <collision>
			    <origin xyz="${link_xyz}" rpy="${link_rpy}"/>
			    <geometry>
				    <mesh filename="${arm_path}"/>
			    </geometry>
		    </collision>
		    <xacro:inertial_box mass="0.5" x="0.09" y="0.02" z="0.2">
			    <origin xyz="${link_xyz}" rpy="${link_rpy}"/>
		    </xacro:inertial_box>
	    </link>

	</xacro:macro>

    <!---->


    <!--LEFT 1-nd-->


	<joint name="LL-1-1" type="revolute">
		<origin xyz="0.07554 -0.214663 0.08" />
		<parent link="base_link" />
		<child link="LL-1-1_link" />
		<axis xyz="0 0 1"/>
		<limit lower="${-(pi/4)}" upper="${pi/4}" velocity="100" effort="100"/>
        <dynamics damping="1.2" friction="1.2"/>
	</joint>

    

	<link name="LL-1-1_link">
		<visual>
			<origin xyz="0.04 0 -0.04" rpy="0 ${-(pi/2)} 0"/>
			<geometry>
				<mesh filename="${arm_path}"/>
			</geometry>
			<material name="orange" />
		</visual>
		<collision>
			<origin xyz="0.04 0 -0.04" rpy="0 ${-(pi/2)} 0"/>
			<geometry>
				<mesh filename="${arm_path}"/>
			</geometry>
		</collision>
		<xacro:inertial_box mass="0.5" x="0.03" y="0.015" z="0.1">
			<origin xyz="0.04 0 -0.04" rpy="0 ${-(pi/2)} 0"/>
		</xacro:inertial_box>
	</link>


    <xacro:leg_section_joint joint_name="LL-1-2" joint_axis="0 1 0" joint_xyz="0.09 0 -0.04" joint_parent="LL-1-1_link" joint_child="LL-1-2_link" />

    <xacro:leg_section_link link_name="LL-1-2_link" link_xyz="0.02 0 -0.04" link_rpy="0 ${-(pi/6)} 0"/>
    


    <xacro:leg_section_joint joint_name="LL-1-3" joint_axis="0 1 0" joint_xyz="0.04 0 -0.08" joint_parent="LL-1-2_link" joint_child="LL-1-3_link" />

    <xacro:leg_section_link link_name="LL-1-3_link" link_xyz="0 0 -0.04" link_rpy="0 0 0"/>



    <!--LEFT 2-nd-->


    <xacro:leg_section_joint joint_name="LL-2-1" joint_axis="0 0 1" joint_xyz="0.07554 -0.01 0.08" joint_parent="base_link" joint_child="LL-2-1_link" />

    <xacro:leg_section_link link_name="LL-2-1_link" link_xyz="0.04 0 -0.04" link_rpy="0 ${-(pi/2)} 0"/>

    

    <xacro:leg_section_joint joint_name="LL-2-2" joint_axis="0 1 0" joint_xyz="0.09 0 -0.04" joint_parent="LL-2-1_link" joint_child="LL-2-2_link" />

    <xacro:leg_section_link link_name="LL-2-2_link" link_xyz="0.02 0 -0.04" link_rpy="0 ${-(pi/6)} 0"/>
    


    <xacro:leg_section_joint joint_name="LL-2-3" joint_axis="0 1 0" joint_xyz="0.04 0 -0.08" joint_parent="LL-2-2_link" joint_child="LL-2-3_link" />

    <xacro:leg_section_link link_name="LL-2-3_link" link_xyz="0 0 -0.04" link_rpy="0 0 0"/>


<!--LEFT 3-nd-->


    <xacro:leg_section_joint joint_name="LL-3-1" joint_axis="0 0 1" joint_xyz="0.07554 0.218646 0.08" joint_parent="base_link" joint_child="LL-3-1_link" />

    <xacro:leg_section_link link_name="LL-3-1_link" link_xyz="0.04 0 -0.04" link_rpy="0 ${-(pi/2)} 0"/>

    

    <xacro:leg_section_joint joint_name="LL-3-2" joint_axis="0 1 0" joint_xyz="0.09 0 -0.04" joint_parent="LL-3-1_link" joint_child="LL-3-2_link" />

    <xacro:leg_section_link link_name="LL-3-2_link" link_xyz="0.02 0 -0.04" link_rpy="0 ${-(pi/6)} 0"/>
    


    <xacro:leg_section_joint joint_name="LL-3-3" joint_axis="0 1 0" joint_xyz="0.04 0 -0.08" joint_parent="LL-3-2_link" joint_child="LL-3-3_link" />

    <xacro:leg_section_link link_name="LL-3-3_link" link_xyz="0 0 -0.04" link_rpy="0 0 0"/>

<!--RIGHT 1-nd-->


    <xacro:leg_section_joint joint_name="RL-1-1" joint_axis="0 0 1" joint_xyz="-0.075 -0.218646 0.08" joint_parent="base_link" joint_child="RL-1-1_link" />

    <xacro:leg_section_link link_name="RL-1-1_link" link_xyz="-0.04 0 -0.04" link_rpy="0 ${(pi/2)} 0"/>

    

    <xacro:leg_section_joint joint_name="RL-1-2" joint_axis="0 1 0" joint_xyz="-0.08 0 -0.04" joint_parent="RL-1-1_link" joint_child="RL-1-2_link" />

    <xacro:leg_section_link link_name="RL-1-2_link" link_xyz="-0.02 0 -0.04" link_rpy="0 ${(pi/6)} 0"/>
    


    <xacro:leg_section_joint joint_name="RL-1-3" joint_axis="0 1 0" joint_xyz="-0.04 0 -0.08" joint_parent="RL-1-2_link" joint_child="RL-1-3_link" />

    <xacro:leg_section_link link_name="RL-1-3_link" link_xyz="0 0 -0.04" link_rpy="0 0 0"/>    


<!--RIGHT 2-nd-->


    <xacro:leg_section_joint joint_name="RL-2-1" joint_axis="0 0 1" joint_xyz="-0.075 -0.01 0.08" joint_parent="base_link" joint_child="RL-2-1_link" />

    <xacro:leg_section_link link_name="RL-2-1_link" link_xyz="-0.04 0 -0.04" link_rpy="0 ${(pi/2)} 0"/>

    

    <xacro:leg_section_joint joint_name="RL-2-2" joint_axis="0 1 0" joint_xyz="-0.08 0 -0.04" joint_parent="RL-2-1_link" joint_child="RL-2-2_link" />

    <xacro:leg_section_link link_name="RL-2-2_link" link_xyz="-0.02 0 -0.04" link_rpy="0 ${(pi/6)} 0"/>
    


    <xacro:leg_section_joint joint_name="RL-2-3" joint_axis="0 1 0" joint_xyz="-0.04 0 -0.08" joint_parent="RL-2-2_link" joint_child="RL-2-3_link" />

    <xacro:leg_section_link link_name="RL-2-3_link" link_xyz="0 0 -0.04" link_rpy="0 0 0"/>    



<!--RIGHT 3-nd-->


    <xacro:leg_section_joint joint_name="RL-3-1" joint_axis="0 0 1" joint_xyz="-0.075 0.218646 0.08" joint_parent="base_link" joint_child="RL-3-1_link" />

    <xacro:leg_section_link link_name="RL-3-1_link" link_xyz="-0.04 0 -0.04" link_rpy="0 ${(pi/2)} 0"/>

    

    <xacro:leg_section_joint joint_name="RL-3-2" joint_axis="0 1 0" joint_xyz="-0.08 0 -0.04" joint_parent="RL-3-1_link" joint_child="RL-3-2_link" />

    <xacro:leg_section_link link_name="RL-3-2_link" link_xyz="-0.02 0 -0.04" link_rpy="0 ${(pi/6)} 0"/>
    


    <xacro:leg_section_joint joint_name="RL-3-3" joint_axis="0 1 0" joint_xyz="-0.04 0 -0.08" joint_parent="RL-3-2_link" joint_child="RL-3-3_link" />

    <xacro:leg_section_link link_name="RL-3-3_link" link_xyz="0 0 -0.04" link_rpy="0 0 0"/>    




    <xacro:include filename="example_gazebo.xacro" />
    <xacro:include filename="ros2_control.xacro"/>
    
</robot>